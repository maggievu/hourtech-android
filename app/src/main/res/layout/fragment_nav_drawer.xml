<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_menu"
    android:orientation="vertical"
    android:paddingBottom="55dp"
    tools:context=".NavigationDrawerFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/menu_title"
        android:textAlignment="center"
        android:textColor="@color/bg_white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/border_btn_drawer"
        android:text="@string/btn_settings"
        android:textColor="@color/bg_white" />

    <Button
        android:id="@+id/location_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_below="@+id/settings_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-1dp"
        android:background="@drawable/border_btn_drawer"
        android:text="@string/location_btn"
        android:textColor="@color/bg_white" />

    <Button
        android:id="@+id/about_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/location_btn"
        android:layout_alignParentStart="true"

        android:layout_marginTop="-1dp"
        android:background="@drawable/border_btn_drawer"
        android:text="@string/about_btn"
        android:textColor="@color/bg_white" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/terms_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:background="@drawable/border_btn_drawer"
        android:gravity="center"
        android:text="logout"
        android:textColor="@color/bg_white" />

    <Button
        android:id="@+id/terms_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_btn_drawer"
        android:text="@string/terms_btn"
        android:textColor="@color/bg_white" />


</RelativeLayout>


